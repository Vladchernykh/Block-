#include <math.h> //ввод математической библиотеки для sin 
#include <iostream> //ввод билблиотеки заголовочный файл с классами, функциями и переменными для организации ввода-вывода в языке программирования C++
#include <stdio.h> //ввод библиотеки для printf

using namespace std; //импорт всего пространства имен std

int main(){ //главная функция main ()
    int n,R; //дается 2 числа
    cin >> n >> R; //ввод этих чисел
    double z=180/n;  //180 делится на n где =число с числами после запятой
    double c=sin(z); //c будет как синус числа z,где c-не целое число
    double i=abs(c); //i как число c  в модуле (также число не целое )
    int An=2*R*i; //умножение с произведением которое будет целое
    int P=An*n; //произведение где число также целое
    double S=1.0/2*P*R; //деление и умножение,где число будет не целым
    printf("%.2lf", S); //вывод числа S где после целого числа 2 цифры после запятой
    return 0; //выход из функции с выводом
    
