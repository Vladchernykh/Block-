#include <iostream> //ввод билблиотеки заголовочный файл с классами, функциями и переменными для организации ввода-вывода в языке программирования C++

using namespace std; //импорт всего пространства имен std


int a; //дано число а
int i = 1; //число i которое равно 1
int count = 1; //и число count которое тоже равно 1

main () //главная функция main ()
{

    cin >> a; //ввод числа a

    while(true) //while(true ) создание бесконечного цыкла
    {
        count = count * i; //число делится на i,после чего заменяется cout на полученное произведение
        i++; //каждое повторение цыкла i становиться больше на 1 
        if(count >= a) break; //цикл останавливается когда число count больше или равно a
    }
    if(count == a) cout << "число является факториалом"; // == равно ли (сравнение),если count= a?после чего выводится если это так
    else cout << "число не является факториалом"; //если count не равно a,то выводится текст 
 
    return 0; //выход из функции с выводом
}
