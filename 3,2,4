#include <iostream> //ввод библиотеки
#include <math.h> //ввод математ. библиотеки 

using namespace std;

int main() //главная функция main ()
{
int s=0; //дано чилсо s=0
int i,n; //даны числа i,n
cout << "чему равно n: "; cin >> n; //вывод чему равно n: для удобства,и cin-ввод числа
for (i=0; i < n;i++) //цикл,где i=0,i<n,и число i всегда становится больше с новым циклом,пока i не станет равно,либо больше,то цикл не прекратится
    s += pow(n + i,2); // s+= это сумма чисел, pow-возведение в степень
cout<<"сумма="<<s; //вывод суммы
return 0; //выход из функции с выводом
}
